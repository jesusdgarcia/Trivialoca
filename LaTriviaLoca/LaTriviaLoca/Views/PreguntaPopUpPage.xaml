<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LaTriviaLoca.Views.PreguntaPopUpPage"
             CanBeDismissedByTappingOutsideOfPopup="False"
             Size="300, 350"
             Color="Transparent">
    <Frame CornerRadius="20">
        <StackLayout
            BackgroundColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label 
                x:Name="lblPregunta"
                Text="Aqui el binding"
                TextColor="Black"
                FontSize="16"
                Padding="20,20,20,20"
                HorizontalOptions="Center"/>

            <Button 
                x:Name="btnTrue"
                Style="{DynamicResource botonVerdeStyle}"
                Clicked="OnClickTrue"
                Text="True"/>
            <Button 
                x:Name="btnFalse"
                Style="{DynamicResource botonRojoStyle}"
                Clicked="OnClickFalse"
                Text="False"/>
        </StackLayout>
    </Frame>
</toolkit:Popup>